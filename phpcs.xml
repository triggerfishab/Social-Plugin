<?xml version="1.0"?>
<ruleset name="WPTemplate">
  <description>WPTemplate Coding Standards</description>

  <!-- Use PSR-2 as a base -->
  <rule ref="WordPress-Core"/>

  <!-- Show colors in console -->
  <arg value="-colors"/>

  <!-- Show sniff codes in all reports -->
  <arg value="ns"/>

  <!-- Scan only PHP files -->
  <arg name="extensions" value="php"/>

  <!-- Ignore Composer and Node Modules dependencies -->
  <exclude-pattern>vendor/</exclude-pattern>
</ruleset>
